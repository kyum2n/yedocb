<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.yedocb.admin.repository.AdminMapper">

	<!-- 모든 관리자 목록 조회 -->
	<select id="selectAllAdmins" resultType="com.example.yedocb.admin.entity.Admin">
		SELECT * FROM admin
	</select>
	
	<!-- 관리자 등록 -->
	<insert id="insertAdmin" parameterType="com.example.yedocb.admin.entity.Admin">
		INSERT INTO admin (aId, aEmail, aPwd, role, createdBy)
		VALUES (#{aid}, #{aemail}, #{apwd}, #{role}, #{created_by})
	</insert>
	
	<!-- 관리자 삭제 -->
	<delete id="deleteAdmin" parameterType="String">
		DELETE FROM admin
		WHERE aId = #{aid}
	</delete>
	
	<!-- 관리자 아이디로 관리자 조회 -->
	<select id="selectByAId" resultType="com.example.yedocb.admin.entity.Admin">
		SELECT * FROM admin
		WHERE aId = #{aid}
	</select>

	<!-- 관리자 로그인 -->
	<select id="loginAdmin" resultType="com.example.yedocb.admin.entity.Admin">
		SELECT * FROM admin
		WHERE aId = #{aId} AND aPwd = #{aPwd}
	</select>
	
	<!-- 관리자 이메일로 관리자 아이디 찾기 -->
	<select id="findAdminId" resultType="com.example.yedocb.admin.entity.Admin">
		SELECT aId FROM admin
		WHERE aEmail = #{aemail}
	</select>
	
	<!-- 관리자 아이디로 비밀번호 찾기 -->
	<select id="findAdminPassword" resultType="com.example.yedocb.admin.entity.Admin">
		SELECT aPwd FROM admin
		WHERE aId = #{aid}
	</select>
</mapper>