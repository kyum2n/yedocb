<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.example.yedocb.user.repository.UserMapper">

    <insert id="insertUser" parameterType="User">
        INSERT INTO users(u_id, u_name, u_pwd, u_email, u_phone)
        VALUES (#{uId}, #{uName}, #{uPwd}, #{uEmail}, #{uPhone})
    </insert>

    <select id="selectByUId" resultType="User">
        SELECT * FROM users WHERE u_id = #{uId}
    </select>

    <select id="selectByUEmail" resultType="User">
        SELECT * FROM users WHERE u_email = #{uEmail}
    </select>

    <update id="updateUserPhonePwd">
        UPDATE users SET u_phone = #{phone}, u_pwd = #{pwd} WHERE u_id = #{uId}
    </update>

    <delete id="deleteUser">
        DELETE FROM users WHERE u_id = #{uId}
    </delete>

    <select id="selectAllUsers" resultType="User">
        SELECT * FROM users
    </select>

</mapper>